{
  "scope"    : {"shared_tempate_path" : "shared/shared.json", "request" : {"userNames": ["one", "two", "three"]}},
  "template" : {
    "message"   : "hello",
    "float"     : "{{1 + 0.1 }}",
    "sum"       : "{{0 + 1 }}",
    "nil"       : "{{null}}",
    "boolean"   : "{{1 == 2}}",
    "list"      : "{{ 'one,two,three,four,five'.split(',') }}",
    "repeater"  : {
                    "@repeat" : "name in request.userNames",
                    "id": "{{(1 +$index) + '-' + name}}"
    },
    "included-file"  : {"@include": "{{shared_tempate_path}}"}
  }
,
  "expected"   : {
    "message" : "hello",
    "float"   : 1.1,
    "sum"     : 1,
    "nil"     : null,
    "boolean" : false,
    "list"    : ["one", "two", "three", "four", "five"],
    "repeater": [
                  {"id": "1-one"},
                  {"id": "2-two"},
                  {"id": "3-three"}
    ],
    "included-file": {"shared"  : "a shared json template"}
  }
}